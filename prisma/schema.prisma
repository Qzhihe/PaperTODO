datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  todos    Todo[]

  @@map("users")
}

model Todo {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  usrEmail    String
  title       String
  date        DateTime?
  reminder    DateTime?
  priority    Int       @default(0)
  isDone      Boolean   @default(false)
  category    String?
  description String?
  timestamp   DateTime
  user        User      @relation(fields: [usrEmail], references: [email])

  @@map("todos")
}
