datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String

  @@map("users")
}

model Todo {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  @@map("todos")
}
